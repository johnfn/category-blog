{% extends 'base.html' %}
{% block body %}
<div class="hero-unit">
  <h1>johnfn's blog</h1>
<p> programming and the meaning of life </p>
</div>

<div class="row">
  <div class="span8">
    {% for entry in entries %}
      <div class="entry">
        <a href="/{{ entry.id }}"><h2 class="post-title"> {{ entry.title }} </h2></a>
        <span class="datetime"> {{ entry.date }} </span>
        <div> {{ entry.content }} </div>
      </div>
    {% endfor %}
  </div>
</div>
{% endblock %}